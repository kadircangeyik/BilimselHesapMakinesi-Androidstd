<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <TextView
        android:id="@+id/baslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sari"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:rotationX="10"
        android:text="GALATASARAY CAMİASINA ARMAĞAN OLSUN"
        android:textColor="@color/kirmizi" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/kirmizi"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/gs" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="99dp"
        android:layout_weight="0.67"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtGirdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:gravity="right"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:textSize="15pt"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <!-- Butonlar -->
        <Button
            android:id="@+id/btnTemizle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"

            android:text="Temizle"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMod"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/sari"
            android:text="Mod"
            android:textColor="@color/kirmizi"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnYedi"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="7"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSekiz"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="8"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDokuz"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="9"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBöl"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.15"
            android:backgroundTint="@color/kirmizi"
            android:text="/"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDört"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="4"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBes"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="5"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAlti"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="6"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCarp"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".98"
            android:backgroundTint="@color/kirmizi"
            android:text="*"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBir"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="1"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIki"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="2"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnUc"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:backgroundTint="@color/kirmizi"
            android:text="3"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEksi"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.27"
            android:backgroundTint="@color/kirmizi"
            android:text="-"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.22"
            android:backgroundTint="@color/kirmizi"
            android:text="."
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSifir"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".98"
            android:backgroundTint="@color/kirmizi"
            android:text="0"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEsittir"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".95"
            android:backgroundTint="@color/kirmizi"
            android:text="="
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnArti"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".93"
            android:backgroundTint="@color/kirmizi"
            android:text="+"
            android:textColor="@color/sari"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Switch
        android:id="@+id/temaDegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="TARAFINI DEĞİŞTİR"/>

</LinearLayout>